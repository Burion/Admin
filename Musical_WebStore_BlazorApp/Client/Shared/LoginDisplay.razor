@inject AppState AppState
<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <a href="LogOut"  @onclick="Refresh">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="Register">Register</a> &nbsp; <a href="Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>


@code {
    void Refresh()
    {
        AppState.RefreshState();   
    }
}